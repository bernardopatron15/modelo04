                <!-- product -->
<% salaProdutos.forEach(function(produto) { %>
  <div class="product">
    <div class="product-img">
      <img src="/fotos/<%= produto.foto %>" alt="<%= produto.titulo %>" />
      <div class="product-label">
        <span class="sale">-<%= produto.desconto %>%</span>
      </div>
    </div>
    <div class="product-body">
      <p class="product-category"><%= produto.categoria.titulo %></p>
      <h3 class="product-name">
        <a href="/produto/<%= produto._id %>"><%= produto.titulo %></a>
      </h3>
      <h4 class="product-price">R$ <%= produto.preco %>,00</h4>
    </div>
    <div class="add-to-cart">
      <a href="/produto/<%= produto._id %>">
        <button class="add-to-cart-btn">
          <i class="fa fa-shopping-cart"></i> COMPRAR AGORA
        </button>
      </a>
    </div>
  </div>
<% }); %>
<!-- /product -->

              </div>
