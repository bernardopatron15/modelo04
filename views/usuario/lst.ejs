<%- include('../tela01') %>

<div class="container my-4">
    <h1 class="text-center mb-4">Lista de Usuários</h1>
    <form method="post" class="form-inline justify-content-center mb-4">
        <input type="text" name="pesquisar" id="pesquisar" class="form-control mr-2" placeholder="Digite aqui o que você deseja pesquisar!">
        <button type="submit" class="btn btn-primary">Pesquisar</button>
    </form>
    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>_id</th>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>CPF</th>
                    <th>Endereço</th>
                    <th>Cidade</th>
                    <th>Cep</th>
                    <th>Celular</th>
                    <th>Foto</th>
                    <th>Criação</th>
                    <th>Edita</th>
                    <th>Deleta</th>
                </tr>
            </thead>
            <tbody>
                <% Usuarios.forEach(function(usuario) { %>
                <tr>
                    <td><%= usuario._id %></td>
                    <td><%= usuario.nome %></td>
                    <td><%= usuario.email %></td>
                    <td><%= usuario.cpf %></td>
                    <td><%= usuario.endereco %></td>
                    <td><%= usuario.cidade %></td>
                    <td><%= usuario.cep %></td>
                    <td><%= usuario.celular %></td>
                    <td>
                        <img class="img-fluid" style="width: 100px;" src="/fotos/<%= usuario.foto %>" alt="Foto do Usuário">
                    </td>
                    <td><%= usuario.criacao %></td>
                    <td>
                        <a href="/usuario/edt/<%= usuario._id %>" class="btn btn-warning btn-sm">Editar</a>
                    </td>
                    <td>
                        <a href="/usuario/del/<%= usuario._id %>" class="btn btn-danger btn-sm">Deletar</a>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>

<%- include('../rodape') %>
